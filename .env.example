# Ethereum Sepolia RPC endpoint (L1 - for SigningCoordinatorAgent)
ETH_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Base Sepolia RPC endpoint (L2 - signing chain)
SIGNING_CHAIN_RPC_URL=https://base-sepolia.drpc.org

# Private key for funding account (needs test ETH on Base Sepolia)
PRIVATE_KEY=0x1234567890abcdef...

# ERC-4337 bundler endpoint (Pimlico example - Base Sepolia chain ID 84532)
BUNDLER_URL=https://api.pimlico.io/v2/84532/rpc?apikey=YOUR_PIMLICO_API_KEY

# Discord bot configuration
DISCORD_PUBLIC_KEY=your_discord_public_key
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_application_id
DISCORD_GUILD_ID=your_guild_id

# Optional: TACo configuration (defaults shown)
# TACO_DOMAIN=lynx
# COHORT_ID=1

# Optional: Funding configuration
# MIN_SA_BALANCE_ETH=0.001
# FUNDING_AMOUNT_ETH=0.001
# BOT_FUNDING_PRIVATE_KEY=0x...  # If different from PRIVATE_KEY

# Optional: Account age requirement (spam prevention)
# MIN_ACCOUNT_AGE_DAYS=7  # Minimum Discord account age in days (default: 7)

# Optional: Base Mainnet RPC (for gas estimation in USD)
# BASE_MAINNET_RPC_URL=https://mainnet.base.org

# Optional: Bot server port
# PORT=8787  # or INTERACTIONS_PORT
